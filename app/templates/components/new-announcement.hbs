{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date</label> {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label> {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="message">Message</label> {{input value=message id="message"}}
      </div>

      <button {{action 'saveAnnouncement'}}>Save</button>
      {{#link-to 'index'}}<button type="button" {{action 'announcementFormHide'}}>Cancel</button> {{/link-to}}

    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>Admin New Announcement</button>
{{/if}}
